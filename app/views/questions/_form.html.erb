<%= form_for([@exam, @question], :html => {:multipart => true}) do |f| %>
  <div class="field">
    <%= f.text_area :description, :rows => 5, :placeholder => "Question..." %>
  </div><br/>
  <div class="field">
    Type of Question : 
    <%= f.select :ques_type, options_for_select([["Radio Button", "Radio Button"], ["CheckBox","CheckBox"]]) %>
  </div>
  <%= f.file_field :image %><br/><br/>
  <div class="actions" id="submit_question">
    <%= f.submit "Submit" %>
  </div>
<% end %>

<script>
$("#submit_question").click(function() {
  if($("#question_description").val().length < 1) {
    $(".validateQuestion").show();
    return false;
  }
});
</script>
