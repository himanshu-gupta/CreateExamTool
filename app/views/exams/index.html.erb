<% @exams.each do |exam| %>
  <tr id="<%= exam.id%>">
    <td><%= exam.name %></td>
    <td><%= exam.owner %></td>
    <td><%= link_to 'Questions', exam_questions_path(exam) %></td>    
    <td><%= link_to 'Edit', edit_exam_path(exam) %></td>
    <td><%= link_to 'Destroy', exam, :confirm => 'Are you sure?', :method => :delete, :remote => true %></td>
  </tr>
<% end %>
</table>

