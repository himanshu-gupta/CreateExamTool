<table id="take_exam_question">
  <%#= form_tag(set_project_phase_projects_path, :method => "put", :remote => true) do %>
    <% @question.answers.each do |answer| %>
      <% if answer.id.present? %>
        <tr id="<%= answer.id%>">
          <% ques_type = answer.question.ques_type %>
          <% if ques_type == "Radio Button" %>
          	<td width='20'><%= radio_button_tag "answer[]", answer.id %></td>
          <% elsif ques_type == "CheckBox" %>
          	<td width='20'><%= check_box_tag "answer[]", answer.id %></td>
          <% end %>
          <td width='950'><%= answer.desc %></td>
        </tr>
        <% if answer.image_url.present? %>
          <tr>
            <td colspan='2' align='center'><%= image_tag answer.image_url(:thumb).to_s %></td>
          </tr>
        <% end %>
      <% end %>
    <% end %>
    <tr>
      <td colspan='2' align='center'><%= submit_tag("Submit Answer")%></td>
    </tr>
  <%# end %>
</table><br/>

<table width="100%">
  <tr width="100%">
    <td width="50%"><%= link_to '<< Previous Question', exam_question_path(@exam, @prev_ques_id), :id => "each_number" if @prev_ques_id.present? %></td>
    <td align='right' width="50%"><%= link_to 'Next Question >>', exam_question_path(@exam, @next_ques_id), :id => "each_number" if @next_ques_id.present? %></td>
  </tr>
</table>